<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:DraggableColors.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DraggableColors.Views.RectangleColor" ClipToBounds="False" >
    <Grid x:Name="Panel" VerticalAlignment="Center" RowDefinitions="*,*,*,*">
        <TextBlock Grid.Row="1" x:Name="ColorName" HorizontalAlignment="Center" />
        <TextBlock Grid.Row="2" x:Name="ColorHex" HorizontalAlignment="Center"/>
    </Grid>
    <UserControl.RenderTransform>
        <TranslateTransform/>
    </UserControl.RenderTransform>
</UserControl>
